    </section>
<div id="overlayContainer"></div>              
    <div class="everyback">
        <div class="reservation-container">
            <h2>Reserve sua mesa!</h2>
            <form action="/reservar" method="post" class="reserv">
                <label for="data">Data:</label>
                <input type="date" id="data" name="data">
                <label>Mesa com quantas cadeiras?</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheck4" name="qtd" value="8">
                    <label class="form-check-label" for="flexSwitchCheck4">Mesa para 8 pessoas</label>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheck8" name="qtd" value="4">
                    <label class="form-check-label" for="flexSwitchCheck8" >Mesa para 4 pessoas</label>
                </div>
                {{#if message}}
                {{#if success}}
                <h4 class="alert alert-success mt-2">{{message}}</h4>
                {{else}}
                    <h4 class="alert alert-danger mt-2">{{message}}</h4>
                {{/if}}
                {{/if}}
                
                <br><br>
                <button type="submit" class="btn btn-outline-secondary">Reservar</button>
            </form>
        </div>
    </div>

